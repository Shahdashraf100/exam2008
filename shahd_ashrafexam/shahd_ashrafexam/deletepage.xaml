        <TextBox x:Name="numphone" HorizontalAlignment="Left" Margin="280,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button FontSize="33" Content="delete" HorizontalAlignment="Left" Margin="56,0,0,0" VerticalAlignment="Center" Background="#FFDCF47A" Click="Button_Click"/>
        <DataGrid x:Name="dg" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2" Margin="40,280,40,10"/>

    </Grid>
