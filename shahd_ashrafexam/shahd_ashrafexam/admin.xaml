<Page x:Class="shahd_ashrafexam.admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:shahd_ashrafexam"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="admin">

    <Grid Background="#FFFEECEC">
        <Label FontSize="33" Content="login in admin" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Label FontSize="22" Content="user name" HorizontalAlignment="Left" Margin="50,130,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="225,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label  FontSize="22" Content="password" HorizontalAlignment="Left" Margin="54,0,0,0" VerticalAlignment="Center"/>
        <TextBox  x:Name="pass" HorizontalAlignment="Left" Margin="225,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <Button FontSize="22" Content="login" HorizontalAlignment="Left" Margin="490,351,0,0" VerticalAlignment="Top" Background="#FFE01A1A" Click="Button_Click"/>

    </Grid>
</Page>
